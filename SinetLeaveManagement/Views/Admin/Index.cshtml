@model IEnumerable<SinetLeaveManagement.Models.ApplicationUser>

@{
    ViewData["Title"] = "Users";
}

<h2 class="mb-4">Users</h2>

<p>
    <a asp-action="Create" class="btn btn-success mb-3">
        <i class="bi bi-person-plus"></i> Create User
    </a>
</p>

<table class="table table-striped align-middle">
    <thead class="table-light">
        <tr>
            <th>Email</th>
            <th>Name</th>
            <th class="text-center">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Email</td>
                <td>@user.FirstName @user.LastName</td>
                <td class="text-center">
                    <div class="btn-group" role="group">
                        <a asp-action="EditRoles" asp-route-userId="@user.Id" class="btn btn-sm btn-primary">
                            <i class="bi bi-gear"></i> Roles
                        </a>
                        <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-warning text-white">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-sm btn-danger">
                            <i class="bi bi-trash"></i> Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
