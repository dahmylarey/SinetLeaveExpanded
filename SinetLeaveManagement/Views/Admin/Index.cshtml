@model IEnumerable<SinetLeaveManagement.Models.ApplicationUser>
@{
    ViewData["Title"] = "Users";
}
<h2>Users</h2>
<table class="table table-striped">
    <tr>
        <th>Email</th>
        <th>Name</th>
        <th>Actions</th>
    </tr>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.Email</td>
            <td>@user.FirstName @user.LastName</td>
            <td>
                <a asp-action="EditRoles" asp-route-userId="@user.Id" class="btn btn-sm btn-primary">Edit Roles</a>
            </td>
        </tr>
    }
</table>
