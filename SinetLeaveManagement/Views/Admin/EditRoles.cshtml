@model SinetLeaveManagement.Models.EditRolesViewModel
@{
    ViewData["Title"] = "Edit Roles";
}
<h2>Edit Roles for @Model.UserEmail</h2>
<form asp-action="EditRoles" method="post">
    <input type="hidden" asp-for="UserId" />
    <div class="form-group">
        @foreach (var role in Model.AllRoles)
        {
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="SelectedRoles" value="@role"
                       @(Model.AssignedRoles.Contains(role) ? "checked" : "") />
                <label class="form-check-label">@role</label>
            </div>
        }
    </div>
    <button type="submit" class="btn btn-success">Save</button>
</form>
