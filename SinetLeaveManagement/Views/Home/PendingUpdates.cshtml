@model IEnumerable<SinetLeaveManagement.Models.LeaveRequest>

<h4>Pending Leave Requests</h4>

@if (!Model.Any())
{
    <div class="alert alert-info">No pending leave requests.</div>
}
else
{
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Reason</th>
                <th>Start Date</th>
                <th>End Date</th>
                <th>Status</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Reason</td>
                    <td>@item.StartDate.ToShortDateString()</td>
                    <td>@item.EndDate.ToShortDateString()</td>
                    <td><span class="badge bg-warning text-dark">@item.Status</span></td>
                    <td>
                        @if (User.IsInRole("Admin") || User.IsInRole("Manager"))
                        {
                            <div>
                                <a asp-controller="Leave" asp-action="Approve" asp-route-id="@item.Id" class="btn btn-sm btn-success">Approve</a>
                                <a asp-controller="Leave" asp-action="Reject" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Reject</a>
                                <a asp-controller="Leave" asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Details</a>
                                <a asp-controller="Leave" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>

                                <a asp-controller="Leave" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm"
                                   onclick="return confirm('Are you sure you want to delete this request?');">Delete</a>
                                <a asp-action="ExportExcel" asp-controller="Leave" class="btn btn-success">
                                    Excel
                                </a>
                                <a asp-action="ExportPdf" asp-controller="Leave" class="btn btn-info">
                                    PDF
                                </a>
                            </div>


                            <div>
                            </div>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
