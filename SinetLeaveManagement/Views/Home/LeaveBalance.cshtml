@model SinetLeaveManagement.Models.HomeIndexViewModel

<h4>Leave Balance</h4>

<div class="row g-3">
    <div class="col-md-4">
        <div class="card shadow-sm">
            <div class="card-body">
                <h6>Annual Leave</h6>
                <p>@Model.AnnualLeaveUsed / @Model.AnnualLeaveTotal used</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card shadow-sm">
            <div class="card-body">
                <h6>Sick Leave</h6>
                <p>@Model.SickLeaveUsed / @Model.SickLeaveTotal used</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card shadow-sm">
            <div class="card-body">
                <h6>Personal Leave</h6>
                <p>@Model.PersonalLeaveUsed / @Model.PersonalLeaveTotal used</p>
            </div>
        </div>
    </div>
</div>
