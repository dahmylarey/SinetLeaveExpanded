@model SinetLeaveManagement.Models.HomeIndexViewModel

@{
    ViewData["Title"] = "Home";
}<br />

<div class="container-fluid py-4">
    <!-- Welcome Header -->
    <div class="mb-4">
        <h3 class="fw-semibold">Good morning, @User.Identity.Name! <span class="text-warning">👋</span></h3><br />
        <p class="text-muted">Welcome back to your dashboard. Here's what's happening with your leave requests today.</p>
        <small class="text-muted">Wednesday, August 6, 2025, 09:16 AM WAT <span class="text-warning">⏰ 1 pending request</span></small>
    </div>

    <!-- Pending Notifications -->
    @if (Model.UnreadNotificationCount > 0)
    {
        <div class="alert alert-warning d-flex justify-content-between align-items-center">
            <div>
                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                You have <strong>@Model.UnreadNotificationCount</strong> unread notification(s).
            </div>
            <a class="btn btn-sm btn-outline-primary" asp-controller="Leave" asp-action="Notifications">
                View Details
            </a>
        </div>
    }


    <!-- Pending Request Alert -->
    <div class="alert pending-alert d-flex justify-content-between align-items-center mb-4" role="alert">
        <div>
            <i class="bi bi-exclamation-triangle-fill me-2"></i> Pending Request
            <span class="text-muted">You have 1 leave request awaiting approval</span>
        </div>
        <a class="alert-link" asp-action="Index" asp-controller="Leave">
            View details <i class="bi bi-arrow-right"></i>
        </a>

    </div><br />

    <div class="row g-3 mb-4">
        <!-- Annual Leave -->
        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-body p-3">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <h6 class="text-muted mb-0">Annual Leave</h6>
                        <span class="text-primary fw-bold">17 left</span>
                    </div>
                    <div class="progress mb-2" style="height:6px;">
                        <div class="progress-bar bg-primary" style="width:@Model.AnnualLeavePercentage%"></div>
                    </div>
                    <div class="d-flex justify-content-between">
                        <small>@Model.AnnualLeaveUsed of @Model.AnnualLeaveTotal days used</small>
                        <small>@Model.AnnualLeaveRemaining left</small>
                    </div>
                </div>
            </div>
        </div>

        <!-- Sick Leave -->
        <div class="col-md-4">
            <div class="card shadow-sm h-200">
                <div class="card-body p-3 rounded-3">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <h6 class="text-muted mb-0">Sick Leave</h6>
                        <span class="text-danger fw-bold">10 left</span>
                    </div>
                    <div class="progress mb-2" style="height:6px;">
                        <div class="progress-bar bg-danger" style="width:@Model.SickLeavePercentage%"></div>
                    </div>
                    <div class="d-flex justify-content-between">
                        <small>@Model.SickLeaveUsed of @Model.SickLeaveTotal days used</small>
                        <small>@Model.SickLeaveRemaining left</small>
                    </div>
                </div>
            </div>
        </div>

        <!-- Personal Leave -->
        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-body p-3">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <h6 class="text-muted mb-0">Personal Leave</h6>
                        <span class="text-success fw-bold">4 left</span>
                    </div>
                    <div class="progress mb-2" style="height:6px;">
                        <div class="progress-bar bg-success" style="width:@Model.PersonalLeavePercentage%"></div>
                    </div>
                    <div class="d-flex justify-content-between">
                        <small>@Model.PersonalLeaveUsed of @Model.PersonalLeaveTotal days used</small>
                        <small>@Model.PersonalLeaveRemaining left</small>
                    </div>
                </div>
            </div>
        </div>
    </div><br />

    <!-- Quick Actions -->
    <div class="row g-3">
        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h6 class="mb-3">Quick Actions</h6>
                    <div class="d-grid gap-2">
                        <a class="btn btn-dark w-100 mb-2" asp-controller="Leave" asp-action="Create">+ Apply for Leave</a>
                        <a class="btn btn-outline-secondary w-100" asp-controller="Leave" asp-action="Index">View Leave</a>
                        <a class="btn btn-outline-secondary w-100" asp-controller="Home" asp-action="LeaveHistory">View History</a>
                        <a class="btn btn-outline-secondary w-100" asp-controller="Home" asp-action="LeaveBalance">Leave Balance</a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Recent Activity -->
        <div class="col-md-8">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
                    <h6 class="mb-0">Recently Activity</h6>
                    <a asp-controller="Leave" asp-action="AuditLogs" class="btn btn-outline-light btn-sm">See All Activity</a>
                </div>
                <div class="card-body p-0">
                    @if (Model.RecentActivities != null && Model.RecentActivities.Any())
                    {
                        <table class="table table-sm mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Leave Type</th>
                                    <th>Date Applied</th>
                                    <th>Duration</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var activity in Model.RecentActivities)
                                {
                                    <tr>
                                        <td>@activity.LeaveType</td>
                                        <td>@activity.DateApplied.ToString("dd MMM yyyy")</td>
                                        <td>@activity.Duration</td>
                                        <td>
                                            @if (activity.Status == "Approved")
                                            {
                                                <span class="badge bg-success">Approved</span>
                                            }
                                            else if (activity.Status == "Pending")
                                            {
                                                <span class="badge bg-warning text-dark">Pending</span>
                                            }
                                            else if (activity.Status == "Rejected")
                                            {
                                                <span class="badge bg-danger">Rejected</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">@activity.Status</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <div class="p-3 text-muted">No recent activities found.</div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>