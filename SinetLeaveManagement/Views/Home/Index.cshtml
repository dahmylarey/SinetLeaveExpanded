@model SinetLeaveManagement.Models.HomeIndexViewModel

@{
    ViewData["Title"] = "Home";
}

<div class="container-fluid py-4">
    <!-- 🔔 Unread Notifications -->
    @if (Model.UnreadNotificationCount > 0)
    {
        <div class="alert alert-warning d-flex justify-content-between align-items-center">
            <div>
                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                You have <strong>@Model.UnreadNotificationCount</strong> unread notification(s).
            </div>
            <a class="btn btn-sm btn-outline-primary" asp-controller="Leave" asp-action="Notifications">
                View Details
            </a>
        </div>
    }

    <!-- 👋 Greeting Header -->
    <div class="mb-4">
        <h3 id="greeting" class="fw-semibold">
            Good morning, @User.Identity.Name! <span class="text-warning">👋</span>
        </h3>
        <p class="text-muted mb-1">
            Welcome back to your dashboard. Here's what's happening with your leave requests today.
        </p>
        <small id="datetime" class="text-muted">
            <span class="text-warning">⏰ @Model.PendingRequestsCount pending request(s)</span>
        </small>
    </div>

    <!-- ⚠️ Pending Request Alert -->
    <div class="alert pending-alert d-flex justify-content-between align-items-center mb-4" role="alert">
        <div>
            <i class="bi bi-exclamation-triangle-fill me-2"></i>
            Pending Request — <span class="text-muted">You have @Model.PendingRequestsCount leave request(s) awaiting approval</span>
        </div>
        <a class="alert-link" asp-controller="Leave" asp-action="Index">
            View details <i class="bi bi-arrow-right"></i>
        </a>
    </div><br />

    <!-- 🧾 Leave Summary Cards -->
    <div class="row g-3 mb-4">
        <!-- Annual Leave -->
        <div class="col-md-4">
            <div class="card shadow-sm border p-2 rounded-3">
                <div class="card-body">
                    <div class="d-flex justify-content-between mb-2">
                        <h6 class="text-muted mb-0">Annual Leave</h6>
                        <span class="text-primary fw-bold">@Model.AnnualLeaveRemaining left</span>
                    </div>
                    <div class="progress mb-2" style="height:6px;">
                        <div class="progress-bar bg-primary" style="width:@Model.AnnualLeavePercentage%"></div>
                    </div>
                    <div class="d-flex justify-content-between small">
                        <span>@Model.AnnualLeaveUsed of @Model.AnnualLeaveTotal days used</span>
                        <span>@Model.AnnualLeaveRemaining left</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Sick Leave -->
        <div class="col-md-4">
            <div class="card shadow-sm border p-2 rounded-3">
                <div class="card-body">
                    <div class="d-flex justify-content-between mb-2">
                        <h6 class="text-muted mb-0">Sick Leave</h6>
                        <span class="text-danger fw-bold">@Model.SickLeaveRemaining left</span>
                    </div>
                    <div class="progress mb-2" style="height:6px;">
                        <div class="progress-bar bg-danger" style="width:@Model.SickLeavePercentage%"></div>
                    </div>
                    <div class="d-flex justify-content-between small">
                        <span>@Model.SickLeaveUsed of @Model.SickLeaveTotal days used</span>
                        <span>@Model.SickLeaveRemaining left</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Personal Leave -->
        <div class="col-md-4">
            <div class="card shadow-sm border p-2 rounded-3">
                <div class="card-body">
                    <div class="d-flex justify-content-between mb-2">
                        <h6 class="text-muted mb-0">Personal Leave</h6>
                        <span class="text-success fw-bold">@Model.PersonalLeaveRemaining left</span>
                    </div>
                    <div class="progress mb-2" style="height:6px;">
                        <div class="progress-bar bg-success" style="width:@Model.PersonalLeavePercentage%"></div>
                    </div>
                    <div class="d-flex justify-content-between small">
                        <span>@Model.PersonalLeaveUsed of @Model.PersonalLeaveTotal days used</span>
                        <span>@Model.PersonalLeaveRemaining left</span>
                    </div>
                </div>
            </div>
        </div>
    </div><br /><br />

    <!-- ⚙️ Quick Actions + 📊 Recent Activity -->
    <div class="row g-3">
        <!-- Quick Actions -->
        <div class="col-md-4">
            <div class="card shadow-sm h-100 p-4 rounded-3">
                <div class="card-body">
                    <h6 class="mb-3 fw-semibold">Quick Actions</h6>
                    <div class="d-grid gap-2">
                        <a class="btn btn-dark w-100" asp-controller="Leave" asp-action="Create">+ Apply for Leave</a>
                        <a class="btn btn-outline-secondary w-100" asp-controller="Leave" asp-action="Index">View Leave</a>
                        <a class="btn btn-outline-secondary w-100" asp-controller="Home" asp-action="LeaveHistory">View History</a>
                        <a class="btn btn-outline-secondary w-100" asp-controller="Home" asp-action="LeaveBalance">Leave Balance</a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Recent Activity -->
        <div class="col-md-8">
            <div class="card shadow-sm h-100 rounded-3">
                <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
                    <h6 class="mb-0">Recent Activity</h6>
                    <a asp-controller="Leave" asp-action="AuditLogs" class="btn btn-outline-light btn-sm">See All</a>
                </div>
                <div class="card-body p-0">
                    @if (Model.RecentActivities != null && Model.RecentActivities.Any())
                    {
                        <table class="table table-sm mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Leave Type</th>
                                    <th>Date Applied</th>
                                    <th>Duration</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var activity in Model.RecentActivities)
                                {
                                    <tr>
                                        <td>@activity.LeaveType</td>
                                        <td>@activity.DateApplied.ToString("dd MMM yyyy")</td>
                                        <td>@activity.Duration</td>
                                        <td>
                                            @if (activity.Status == "Approved")
                                            {
                                                <span class="badge bg-success">Approved</span>
                                            }
                                            else if (activity.Status == "Pending")
                                            {
                                                <span class="badge bg-warning text-dark">Pending</span>
                                            }
                                            else if (activity.Status == "Rejected")
                                            {
                                                <span class="badge bg-danger">Rejected</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">@activity.Status</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <div class="p-3 text-muted">No recent activities found.</div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- 🕒 Dynamic Greeting + Date/Time Script -->
<script>
    function updateGreetingAndTime() {
        const now = new Date();
        const hours = now.getHours();
        let greeting = hours < 12 ? "Good morning" : hours < 17 ? "Good afternoon" : "Good evening";

        // Safely inject Razor variables
        const userName = '@User.Identity.Name';
        const pendingCount = parseInt('@Model.PendingRequestsCount') || 0;

        const options = {
            weekday: 'long',
            year: 'numeric',
            month: 'long',
            day: 'numeric',
            hour: '2-digit',
            minute: '2-digit',
            second: '2-digit',
            hour12: true,
            timeZone: 'Africa/Lagos'
        };

        document.getElementById('greeting').innerHTML =
            `${greeting}, ${userName}! <span class="text-warning">👋</span>`;

        const requestText = pendingCount === 1 ? "pending request" : "pending requests";

        document.getElementById('datetime').innerHTML =
            now.toLocaleString('en-US', options) +
            ` WAT <span class="text-warning">⏰ ${pendingCount} ${requestText}</span>`;
    }

    updateGreetingAndTime();
    setInterval(updateGreetingAndTime, 1000);
</script>



