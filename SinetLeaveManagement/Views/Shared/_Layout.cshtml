<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sinet Leave Management</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SinetLeaveManagement.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
    <style>
        .sidebar {
            width: 250px;
            position: fixed;
            height: 100%;
            background-color: #f8f9fa;
            padding: 20px;
            border-right: 1px solid #dee2e6;
        }
        .main-content {
            margin-left: 250px;
            padding: 20px;
        }
        .navbar {
            background-color: #fff;
            border-bottom: 1px solid #dee2e6;
            padding: 10px 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        .nav-link.active {
            background-color: #e9ecef;
            border-radius: 5px;
            color: #0d6efd;
        }
        .notification-badge {
            background-color: #dc3545;
            color: white;
            border-radius: 50%;
            padding: 2px 6px;
            font-size: 12px;
            position: absolute;
            right: -10px;
            top: -5px;
        }
        .pending-alert {
            background-color: #fff3cd;
            border-color: #ffeeba;
            border-radius: 5px;
        }
        .card {
            border: none;
            border-radius: 10px;
        }
        .btn-dark {
            background-color: #000;
            border-color: #000;
        }
        .btn-dark:hover {
            background-color: #333;
            border-color: #333;
        }
        .wrapper {
            display: flex;
            min-height: 100vh;
        }
    </style>
</head>
<body>
    <!-- Top Navbar with Hamburger -->
    <nav class="navbar navbar-dark bg-primary d-lg-none">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">Sinet Leave Management</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#mobileMenu">
                <span class="navbar-toggler-icon"></span>
            </button>
        </div>
    </nav>

    <!-- Mobile Offcanvas Menu -->
    <div class="offcanvas offcanvas-start bg-primary text-white" tabindex="-1" id="mobileMenu">
        <div class="offcanvas-header">
            <h5 class="offcanvas-title">Menu</h5>
            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas"></button>
        </div>
        <div class="offcanvas-body">
            @* Mobile menu items *@
            <ul class="nav flex-column">
                <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">Dashboard</a></li>
                
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Leave" asp-action="Notifications">
                        Notifications @await Component.InvokeAsync("NotificationBadge")
                    </a>
                </li>
                @if (User.IsInRole("Admin"))
                {
                    <li class="nav-item"><a class="nav-link" asp-controller="Account" asp-action="Register">Register User</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Leave" asp-action="AuditLogs">Audit Logs</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="LeaveTypes" asp-action="Index">Manage Leave Types</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Leave" asp-action="Index">Leave Requests</a></li>
                }

                @if (User.IsInRole("Manager"))
                {
                    <li class="nav-item mb-2"><a class="nav-link" asp-controller="Account" asp-action="Register"><i class="bi bi-person-plus me-2"></i> Register User</a></li>
                    <li class="nav-item mb-2"><a class="nav-link" asp-controller="Leave" asp-action="AuditLogs"><i class="bi bi-file-earmark-text me-2"></i> Audit Logs</a></li>
                    <li class="nav-item mb-2"><a class="nav-link" asp-controller="LeaveTypes" asp-action="Index"><i class="bi bi-tags me-2"></i> Manage Leave Types</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Leave" asp-action="Index">Leave Requests</a></li>
                }

                @if (User.Identity.IsAuthenticated)
                {
                    <li class="nav-item"><a class="nav-link" asp-controller="Account" asp-action="Profile">Profile</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Leave" asp-action="Create">+ Apply</a></li>
                    <li class="nav-item">
                        <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                            <button type="submit" class="nav-link btn btn-link text-white">Logout (@User.Identity.Name)</button>
                        </form>
                    </li>
                    
                }
                else
                {
                    <li class="nav-item"><a class="nav-link" asp-controller="Account" asp-action="Login">Login</a></li>
                }
            </ul>
        </div>
    </div>

    <div class="wrapper">
        <!-- Desktop Sidebar -->
        <div class="sidebar d-none d-lg-block">
            <div class="d-flex align-items-center mb-4">
                <i class="bi bi-calendar3" style="font-size: 24px; color: #0d6efd;"></i>
                <span class="fw-bold ms-2">Manage Leave</span>
            </div>
            <ul class="nav flex-column">
                <li class="nav-item mb-2"><a class="nav-link active" asp-controller="Home" asp-action="Index"><i class="bi bi-speedometer2 me-2"></i> Dashboard</a></li>
                <li class="nav-item"><a class="nav-link" asp-controller="Leave" asp-action="Index">Leave Requests</a></li>

                <li class="nav-item mb-2"><a class="nav-link" asp-controller="Leave" asp-action="Create"><i class="bi bi-calendar-check me-2"></i> Apply Leave</a></li>
                <li class="nav-item mb-2"><a class="nav-link" asp-controller="Home" asp-action="LeaveBalance"><i class="bi bi-bar-chart-line me-2"></i> Leave Balance</a></li>
                <li class="nav-item mb-2"><a class="nav-link" asp-controller="Home" asp-action="LeaveHistory"><i class="bi bi-clock-history me-2"></i> Leave History</a></li>
                <li class="nav-item mb-2"><a class="nav-link" asp-controller="Home" asp-action="PendingUpdates"><i class="bi bi-hourglass-split me-2"></i> Pending Requests </a></li>
                <li class="nav-item mb-2">
                    <a class="nav-link" asp-controller="Leave" asp-action="Notifications">
                        <i class="bi bi-bell me-2"></i> Notifications @await Component.InvokeAsync("NotificationBadge")
                    </a>
                </li>
                @if (User.IsInRole("Admin"))
                {
                    <li class="nav-item mb-2"><a class="nav-link" asp-controller="Account" asp-action="Register"><i class="bi bi-person-plus me-2"></i> Register User</a></li>
                    <li class="nav-item mb-2"><a class="nav-link" asp-controller="Leave" asp-action="AuditLogs"><i class="bi bi-file-earmark-text me-2"></i> Audit Logs</a></li>
                    <li class="nav-item mb-2"><a class="nav-link" asp-controller="LeaveTypes" asp-action="Index"><i class="bi bi-tags me-2"></i> Manage Leave Types</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Leave" asp-action="Index">Leave Requests</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Admin" asp-action="Index">Get Users</a></li>
                }

                @if (User.IsInRole("Manager"))
                {
                    <li class="nav-item mb-2"><a class="nav-link" asp-controller="Account" asp-action="Register"><i class="bi bi-person-plus me-2"></i> Register User</a></li>
                    <li class="nav-item mb-2"><a class="nav-link" asp-controller="Leave" asp-action="AuditLogs"><i class="bi bi-file-earmark-text me-2"></i> Audit Logs</a></li>
                    <li class="nav-item mb-2"><a class="nav-link" asp-controller="LeaveTypes" asp-action="Index"><i class="bi bi-tags me-2"></i> Manage Leave Types</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Leave" asp-action="Index">Leave Requests</a></li>
                }

                @if (User.Identity.IsAuthenticated)
                {
                    @* <li class="nav-item mb-2"><a class="nav-link" asp-controller="Account" asp-action="Profile"><i class="bi bi-person me-2"></i> Profile</a></li> *@
                    <li class="nav-item mb-2"><a class="nav-link" asp-controller="Leave" asp-action="Create"><i class="bi bi-plus-circle me-2"></i> + Apply</a></li>
                    <li class="nav-item mb-2">
                        <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                            <button type="submit" class="nav-link btn btn-link text-white"><i class="bi bi-box-arrow-right me-2"></i> Logout (@User.Identity.Name)</button>
                        </form>
                    </li>
                }
                else
                {
                    <li class="nav-item mb-2"><a class="nav-link" asp-controller="Account" asp-action="Login"><i class="bi bi-door-open me-2"></i> Login</a></li>
                }
            </ul>
        </div>

        <!-- Main Content -->
        <div class="main-content flex-fill p-3">
            <header class="navbar">
                <div class="search-bar">
                    <input type="text" class="form-control" placeholder="Search" />
                </div>
                <div class="d-flex align-items-center">
                    <a href="#" class="me-3 position-relative"><i class="bi bi-bell"></i><span class="notification-badge">3</span></a>
                    <div class="dropdown">
                        <a href="#" class="d-flex align-items-center text-decoration-none dropdown-toggle" id="dropdownUserHeader" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-person-circle" style="font-size: 24px; color: #0d6efd;"></i>
                            <span class="ms-2">(@User.Identity.Name)</span>
                        </a>
                        <ul class="dropdown-menu text-small shadow" aria-labelledby="dropdownUserHeader">
                            <li><a class="dropdown-item" asp-controller="Account" asp-action="Logout">Logout</a></li>
                        </ul>
                    </div>
                </div>
            </header>
            <main role="main">
                @RenderBody()
            </main>
        </div>
    </div>

    <footer class="border-top footer mt-auto py-3 bg-light text-muted">
        <div class="container">
            &copy; 2025 - SinetLeaveManagement - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/8.0.0/signalr.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <!-- Toastr TempData -->
    <input type="hidden" id="TempDataSuccess" value="@TempData["Success"]" />
    <input type="hidden" id="TempDataError" value="@TempData["Error"]" />
</body>
</html>