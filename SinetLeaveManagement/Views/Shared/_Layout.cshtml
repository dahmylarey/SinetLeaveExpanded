<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sinet Leave Management</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SinetLeaveManagement.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />

    <style>
        /* ===============================
                   🧭 Navbar + Animation Styling
                   =============================== */
        .navbar {
            background-color: #fff;
            border-bottom: 1px solid #dee2e6;
            padding: 12px 20px;
            position: sticky;
            top: 0;
            z-index: 1040;
            box-shadow: 0 2px 6px rgba(0, 0, 0, 0.05);
            animation: fadeDown 0.5s ease-in-out;
        }

        

        .nav-link {
            transition: all 0.3s ease;
        }

            .nav-link:hover {
                color: #0d6efd !important;
                transform: translateY(-1px);
            }

            .nav-link.active {
                background-color: #e9ecef;
                border-radius: 6px;
                color: #0d6efd !important;
                font-weight: 600;
            }

        .notification-badge {
            background-color: #dc3545;
            color: white;
            border-radius: 50%;
            padding: 2px 6px;
            font-size: 12px;
            position: absolute;
            right: -10px;
            top: -5px;
        }

        main {
            animation: fadeIn 0.6s ease;
        }

        

        /* ========== Commented-out Sidebar ========== */
        /*
                .sidebar {
                    width: 250px;
                    height: 100%;
                    background-color: #f8f9fa;
                    padding: 20px;
                    border-right: 1px solid #dee2e6;
                }
                .main-content {
                    margin-left: 250px;
                    padding: 20px;
                }
                */

        footer {
            animation: fadeIn 0.8s ease;
        }

        /* Wrapper for full height */
        .wrapper {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }
    </style>
</head>
<body class="d-flex flex-column min-vh-100">
    <!-- ================================
         ✅ NEW TOP NAVBAR (No Sidebar)
         ================================ -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm">
        <div class="container-fluid">
            <!-- Brand -->
            <a class="navbar-brand fw-semibold text-primary d-flex align-items-center" href="@Url.Action("Index", "Home")">
                <img src="~/image/sinetlogo.jpg" alt="Sinet Logo" style="height: 30px;" class="me-2">
                
            </a>

            <!-- Mobile Toggle -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar"
                    aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Nav Links -->
            <div class="collapse navbar-collapse" id="mainNavbar">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item"><a class="nav-link @(ViewBag.ActivePage == "Dashboard" ? "active" : "")" asp-controller="Home" asp-action="Index"><i class="bi bi-speedometer2 me-1"></i>Dashboard</a></li>
                    <li class="nav-item"><a class="nav-link @(ViewBag.ActivePage == "Leave" ? "active" : "")" asp-controller="Leave" asp-action="Index"><i class="bi bi-calendar-check me-1"></i>Leave</a></li>
                    <li class="nav-item"><a class="nav-link @(ViewBag.ActivePage == "Apply" ? "active" : "")" asp-controller="Leave" asp-action="Create"><i class="bi bi-pencil-square me-1"></i>Apply</a></li>

                    @if (User.IsInRole("Admin") || User.IsInRole("Manager"))
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="adminMenu" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-gear me-1"></i> Admin
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="adminMenu">
                                <li><a class="dropdown-item" asp-controller="Account" asp-action="Register">Register User</a></li>
                                <li><a class="dropdown-item" asp-controller="Admin" asp-action="Index">Employee</a></li>
                                <li><a class="dropdown-item" asp-controller="Leave" asp-action="AuditLogs">Audit Logs</a></li>
                                <li><a class="dropdown-item" asp-controller="LeaveTypes" asp-action="Index">Manage Leave Types</a></li>
                            </ul>
                        </li>
                    }
                </ul>

                <!-- Right Icons -->
                <div class="d-flex align-items-center gap-3">
                    <!-- Search -->
                    <form class="d-flex me-2">
                        <input class="form-control rounded-pill" type="search" placeholder="Search by status or user" value="@Context.Request.Query["search"]">
                    </form>

                    <!-- Notification Dropdown -->
                    <div class="dropdown position-relative me-3">
                        <a href="#" class="text-decoration-none text-dark" id="notificationDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-bell fs-5"></i>
                            <span id="notifCount" class="notification-badge">0</span>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end shadow" aria-labelledby="notificationDropdown" style="width: 300px; max-height: 400px; overflow-y: auto;">
                            <!-- Notifications will be dynamically loaded here -->
                            <li class="dropdown-item text-center text-muted">Loading...</li>
                        </ul>
                    </div>


                    <!-- User Dropdown -->
                    <div class="dropdown">
                        <a href="#" class="d-flex align-items-center text-dark text-decoration-none dropdown-toggle" id="userMenu" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-person-circle fs-4 text-primary me-1"></i>
                            <span>@User.Identity?.Name</span>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end shadow" aria-labelledby="userMenu">
                            <li><a class="dropdown-item" asp-controller="Admin" asp-action="Profile">Profile</a></li>
                            <li><hr class="dropdown-divider" /></li>
                            <li>
                                <form asp-controller="Account" asp-action="Logout" method="post">
                                    <button class="dropdown-item text-danger" type="submit">Logout</button>
                                </form>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </nav>

    <!-- ================================
         ✅ Main Content Area
         ================================ -->
    <main class="container flex-grow-1 py-4">
        @RenderBody()
    </main>

    <!-- ================================
         ✅ Footer
         ================================ -->
    <footer class="border-top py-3 text-center small bg-light">
        <div>
            <img src="~/image/sinetlogo.jpg" alt="Sinet Logo" style="height: 25px;">
            <strong class="ms-2">SiNet Technologies</strong>
        </div>
        <div class="mt-2 text-muted">
            <i class="bi bi-geo-alt"></i> Century Virtual Space, 21 Prince Adelowo Adedeji St., Lekki, Lagos, Nigeria<br>
            <i class="bi bi-envelope me-1"></i> info@sinettechnologies.com |
            <i class="bi bi-telephone me-1"></i> +2348033136880, +2348176960515
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/8.0.0/signalr.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script>
        $(document).ready(function () {
            function loadNotifications() {
                $.get("@Url.Action("UnreadNotifications", "Notification")", function (data) {
                    var dropdown = $("#notificationDropdown").siblings(".dropdown-menu");
                    dropdown.empty();

                    if (data.length === 0) {
                        dropdown.append('<li class="dropdown-item text-center text-muted">No new notifications</li>');
                        $("#notifCount").text('');
                    } else {
                        $("#notifCount").text(data.length);

                        data.forEach(function (notif) {
                            var item = `<li class="dropdown-item">
                                            <a href="${notif.url}" class="text-dark text-decoration-none">
                                                ${notif.message} <br>
                                                <small class="text-muted">${notif.createdAt}</small>
                                            </a>
                                        </li>`;
                            dropdown.append(item);
                        });
                        dropdown.append('<li><hr class="dropdown-divider"></li>');
                        dropdown.append('<li class="dropdown-item text-center"><a href="@Url.Action("Index", "Notification")">View All</a></li>');
                    }
                });
            }

            // Load notifications on page load
            loadNotifications();

            // Optional: refresh every 30 seconds
            setInterval(loadNotifications, 30000);
        });
    </script>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <!-- Toastr TempData -->
    <input type="hidden" id="TempDataSuccess" value="@TempData["Success"]" />
    <input type="hidden" id="TempDataError" value="@TempData["Error"]" />

    <script>
        $(document).ready(function () {
            function loadNotifications() {
                $.get("@Url.Action("Index", "Notification")", function (data) {
                    var dropdown = $("#notificationDropdown").siblings(".dropdown-menu");
                    dropdown.empty();

                    if (data.length === 0) {
                        dropdown.append('<li class="dropdown-item text-center text-muted">No new notifications</li>');
                        $("#notifCount").text('');
                    } else {
                        $("#notifCount").text(data.length);

                        data.forEach(function (notif) {
                            var item = `<li class="dropdown-item">
                                            <span>${notif.message}</span>
                                            <br>
                                            <small class="text-muted">${new Date(notif.createdAt).toLocaleString()}</small>
                                        </li>`;
                            dropdown.append(item);
                        });

                        dropdown.append('<li><hr class="dropdown-divider"></li>');
                        dropdown.append('<li class="dropdown-item text-center"><a href="@Url.Action("Index", "Notification")">View All</a></li>');
                    }
                });
            }

            // Load notifications on page load
            loadNotifications();

            // Optional: refresh every 30 seconds
            setInterval(loadNotifications, 30000);
        });
    </script>

</body>
</html>
