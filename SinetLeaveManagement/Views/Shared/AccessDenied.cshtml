@{
    ViewData["Title"] = "Access Denied";
    Layout = "_Layout"; // Use your main layout so navbar/sidebar is consistent
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-danger shadow-sm text-center">
                <div class="card-header bg-danger text-white">
                    <h2><i class="bi bi-shield-lock-fill"></i> Access Denied</h2>
                </div>
                <div class="card-body">
                    <p class="lead text-dark mt-3">
                        Sorry, you do not have permission to access this page.
                    </p>
                    <p class="text-muted">
                        Please contact your administrator if you believe this is an error.
                    </p>
                    <a asp-controller="Home" asp-action="Index" class="btn btn-primary mt-3">
                        <i class="bi bi-house-door"></i> Go to Homepage
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
