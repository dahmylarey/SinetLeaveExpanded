@model SinetLeaveManagement.Models.LeaveRequest
@{
    ViewData["Title"] = "Leave Details";
}

<h2>@ViewData["Title"]</h2>

<div class="card mt-3">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Start Date</dt>
            <dd class="col-sm-9">@Model.StartDate.ToShortDateString()</dd>

            <dt class="col-sm-3">End Date</dt>
            <dd class="col-sm-9">@Model.EndDate.ToShortDateString()</dd>

            <dt class="col-sm-3">Reason</dt>
            <dd class="col-sm-9">@Model.Reason</dd>

            <dt class="col-sm-3">Status</dt>
            <dd class="col-sm-9">@Model.Status</dd>

            <dt class="col-sm-3">Requested By</dt>
            <dd class="col-sm-9">@Model.RequestingUser?.FirstName @Model.RequestingUser?.LastName</dd>
        </dl>
    </div>
</div>
<a asp-action="Index" class="btn btn-secondary mt-2">Back</a>
@if (User.IsInRole("Admin") || User.IsInRole("Manager"))
{
    <a asp-action="Approve" class="btn btn-sm btn-success">Approve</a>
    <a asp-action="Reject" class="btn btn-sm btn-danger">Reject</a>

    <a asp-action="Details" asp-controller="Leave" class="btn btn-info btn-sm">Details</a>
    <a asp-action="Edit" asp-controller="Leave" class="btn btn-warning btn-sm">Edit</a>

    <a asp-action="Delete" asp-controller="Leave" class="btn btn-danger btn-sm"
       onclick="return confirm('Are you sure you want to delete this request?');">Delete</a>
    <a asp-action="ExportExcel" asp-controller="Leave" class="btn btn-success">
        Excel
    </a>
    <a asp-action="ExportPdf" asp-controller="Leave" class="btn btn-info">
        PDF
    </a>
}
<a asp-action="ExportToPdf" asp-route-id="@Model.Id" class="btn btn-danger">Export to PDF</a>
<a asp-action="ExportToExcel" asp-route-id="@Model.Id" class="btn btn-success">Export to Excel</a>
</div>





    
}
