@model SinetLeaveManagement.Models.LeaveRequest

@{
    ViewData["Title"] = "Delete Leave Request";
}

<div class="container mt-5">
    <div class="card border-danger shadow rounded-3">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0">Delete Leave Request #@Model.Id</h4>
        </div>
        <div class="card-body">
            <p class="mb-3 text-danger fw-semibold">
                <i class="bi bi-exclamation-triangle-fill"></i>
                Are you sure you want to delete this leave request? This action cannot be undone.
            </p>

            <dl class="row">
                <dt class="col-sm-4">Employee</dt>
                <dd class="col-sm-8">@Model.RequestingUser?.FirstName @Model.RequestingUser?.LastName</dd>

                <dt class="col-sm-4">Dates</dt>
                <dd class="col-sm-8">@Model.StartDate:dd MMM yyyy - @Model.EndDate:dd MMM yyyy</dd>

                <dt class="col-sm-4">Status</dt>
                <dd class="col-sm-8"><span class="badge bg-secondary">@Model.Status</span></dd>

                <dt class="col-sm-4">Reason</dt>
                <dd class="col-sm-8">@Model.Reason</dd>
            </dl>

            <form asp-action="DeleteConfirmed" method="post" class="mt-4 d-flex gap-2">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger px-4">
                    <i class="bi bi-trash"></i> Delete
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary px-4">
                    <i class="bi bi-arrow-left"></i> Cancel
                </a>
            </form>
        </div>
    </div>
</div>
