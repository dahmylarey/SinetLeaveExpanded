@model SinetLeaveManagement.Models.LeaveRequest
@{
    ViewData["Title"] = "Delete Leave Request";
}

<h2>@ViewData["Title"]</h2>

<div class="alert alert-warning mt-3">
    Are you sure you want to delete this leave request from
    <strong>@Model.StartDate.ToShortDateString()</strong> to
    <strong>@Model.EndDate.ToShortDateString()</strong>?
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
