@model IEnumerable<SinetLeaveManagement.Models.AuditLog>
@{
    ViewData["Title"] = "Audit Logs";
}

<h2 class="mb-4">Audit Logs</h2>

<!-- 🔎 Filter Form -->
<form method="get" asp-action="AuditLogs" asp-controller="Leave" class="row g-3 mb-4">
    <div class="col-md-3">
        <label class="form-label">Start Date</label>
        <input type="date" name="startDate" value="@Context.Request.Query["startDate"]" class="form-control" />
    </div>
    <div class="col-md-3">
        <label class="form-label">End Date</label>
        <input type="date" name="endDate" value="@Context.Request.Query["endDate"]" class="form-control" />
    </div>
    <div class="col-md-3">
        <label class="form-label">Search</label>
        <input type="text" name="search" value="@Context.Request.Query["search"]" class="form-control" placeholder="Action or User" />
    </div>
    <div class="col-md-3 d-flex align-items-end">
        <button type="submit" class="btn btn-primary me-2">
            <i class="bi bi-search"></i> Filter
        </button>
        <a asp-action="AuditLogs" asp-controller="Leave" class="btn btn-secondary">
            <i class="bi bi-arrow-clockwise"></i> Reset
        </a>
    </div>
</form>

<!-- 📤 Export Buttons -->
<div class="mb-3">
    <a asp-action="ExportToExcel" asp-controller="Leave" asp-route-startDate="@Context.Request.Query["startDate"]"
       asp-route-endDate="@Context.Request.Query["endDate"]" asp-route-search="@Context.Request.Query["search"]"
       class="btn btn-success me-2">
        <i class="bi bi-file-earmark-excel"></i> Export Excel
    </a>
    <a asp-action="ExportToPdf" asp-controller="Leave" asp-route-startDate="@Context.Request.Query["startDate"]"
       asp-route-endDate="@Context.Request.Query["endDate"]" asp-route-search="@Context.Request.Query["search"]"
       class="btn btn-danger">
        <i class="bi bi-file-earmark-pdf"></i> Export PDF
    </a>
</div>

<!-- 📋 Audit Logs Table -->
<table class="table table-bordered table-striped align-middle">
    <thead class="table-dark">
        <tr>
            <th>Timestamp</th>
            <th>Action</th>
            <th>Performed By</th>
            <th>Leave Request ID</th>
            <th>Details</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var log in Model)
            {
                <tr>
                    <td>@log.Timestamp.ToLocalTime().ToString("g")</td>
                    <td>@log.Action</td>
                    <td>@log.PerformedByUser?.UserName</td>
                    <td>@log.LeaveRequestId</td>
                    <td>@log.Details</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5" class="text-center text-muted">No audit logs found.</td>
            </tr>
        }
    </tbody>
</table>
