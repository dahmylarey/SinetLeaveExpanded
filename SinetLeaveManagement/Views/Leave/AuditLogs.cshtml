@model IEnumerable<SinetLeaveManagement.Models.AuditLog>
@{
    ViewData["Title"] = "Audit Logs";
}

<h2>Audit Logs</h2>
<table class="table table-bordered">
    <tr>
        <th>Timestamp</th>
        <th>Action</th>
        <th>Performed By</th>
        <th>Leave Request Id</th>
        <th>Details</th>
    </tr>
    @foreach (var log in Model)
    {
        <tr>
            <td>@log.Timestamp.ToLocalTime()</td>
            <td>@log.Action</td>
            <td>@log.PerformedByUser?.UserName</td>
            <td>@log.LeaveRequestId</td>
            <td>@log.Details</td>
        </tr>
    }
</table>
