@model IEnumerable<SinetLeaveManagement.Models.AuditLog>
@{
    ViewData["Title"] = "Audit Logs";
}

<h2>@ViewData["Title"]</h2>

<table class="table table-striped table-bordered mt-3">
    <tr>
        <th>Timestamp</th>
        <th>Action</th>
        <th>By</th>
        <th>Leave Request Id</th>
        <th>Details</th>
    </tr>
    @foreach (var log in Model)
    {
        <tr>
            <td>@log.Timestamp.ToLocalTime()</td>
            <td>@log.Action</td>
            <td>@log.PerformedBy</td>
            <td>@log.LeaveRequestId</td>
            <td>@log.Details</td>
        </tr>
    }
</table>
<a asp-action="Index" class="btn btn-secondary mt-2">Back</a>
