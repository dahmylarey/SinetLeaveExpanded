@model IEnumerable<SinetLeaveManagement.Models.Notification>
@{
    ViewData["Title"] = "Notifications";
}

<h2>@ViewData["Title"]</h2>

@if (!Model.Any())
{
    <p class="text-muted">You have no new notifications.</p>
}
else
{
    <table class="table table-bordered">
        <tr>
            <th>Message</th>
            <th>Date</th>
            <th>Action</th>
        </tr>
        @foreach (var n in Model)
        {
            <tr>
                <td>@n.Message</td>
                <td>@n.CreatedAt.ToLocalTime()</td>
                <td>
                    <a asp-action="MarkAsRead" asp-route-id="@n.Id" class="btn btn-sm btn-success">Mark as Read</a>
                </td>
            </tr>
        }
    </table>
}
<a asp-action="Index" class="btn btn-secondary mt-2">Back</a>
