@model IEnumerable<SinetLeaveManagement.Models.LeaveRequest>

@{
    ViewData["Title"] = "Leaves";
}
<br />
<h2 class="fw-bold mb-4">Leave Requests</h2>

<!-- Top Action Bar -->
<div class="d-flex justify-content-between align-items-center mb-4 flex-wrap gap-2">
    <a asp-action="Create" class="btn btn-dark">
        <i class="fas fa-plus-circle"></i> Create New
    </a>

    <form asp-action="Index" method="get" class="d-flex flex-wrap gap-2">
        <input type="text" name="search" value="@Context.Request.Query["search"]"
               class="form-control" placeholder="Search by status or user" />

        <button type="submit" class="btn btn-primary">
            <i class="fas fa-search"></i> Search
        </button>

        <a asp-action="ExportFilteredToExcel"
           asp-route-search="@Context.Request.Query["search"]"
           class="btn btn-success">
            <i class="fas fa-file-excel"></i> Export to Excel
        </a>

        <a asp-action="ExportFilteredToPdf"
           asp-route-search="@Context.Request.Query["search"]"
           class="btn btn-danger">
            <i class="fas fa-file-pdf"></i> Export to PDF
        </a>
    </form>
</div>

<!-- Leave Table -->
<table class="table table-striped table-bordered leave-table align-middle">
    <thead class="table-dark">
        <tr>
            <th>Requester</th>
            <th>Date</th>
            <th>Status</th>
            <th style="width: 120px;">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr data-id="@item.Id"
                data-requester="@item.RequestingUser.FirstName @item.RequestingUser.LastName"
                data-dates="@item.StartDate.ToShortDateString() - @item.EndDate.ToShortDateString()"
                data-status="@item.Status"
                data-reason="@item.Reason">
                <td>@item.RequestingUser.FirstName @item.RequestingUser.LastName</td>
                <td>@item.StartDate.ToShortDateString() - @item.EndDate.ToShortDateString()</td>
                <td>
                    @if (item.Status == "Approved")
                    {
                        <span class="badge bg-success">@item.Status</span>
                    }
                    else if (item.Status == "Pending")
                    {
                        <span class="badge bg-warning text-dark">@item.Status</span>
                    }
                    else if (item.Status == "Rejected")
                    {
                        <span class="badge bg-danger">@item.Status</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">@item.Status</span>
                    }
                </td>

                <td class="action-buttons text-center">
                    <button type="button" class="btn btn-sm btn-info show-details">
                        <i class="fas fa-eye"></i> View
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Details Modal -->
<div class="modal fade" id="detailsModal" tabindex="-1" aria-labelledby="detailsModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-dark text-white">
                <h5 class="modal-title" id="detailsModalLabel">Leave Request Details</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p><strong>Requester:</strong> <span id="modalRequester"></span></p>
                <p><strong>Dates:</strong> <span id="modalDates"></span></p>
                <p><strong>Status:</strong> <span id="modalStatus"></span></p>
                <p><strong>Reason:</strong></p>
                <p id="modalReason" class="text-muted"></p>
            </div>
            <div class="modal-footer">
                @if (User.IsInRole("Admin") || User.IsInRole("Manager"))
                {
                    <a id="approveBtn" class="btn btn-success"><i class="fas fa-check"></i> Approve</a>
                    <a id="rejectBtn" class="btn btn-danger"><i class="fas fa-times"></i> Reject</a>
                }
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times-circle"></i> Close
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>

    <script>
        $(document).on("click", ".show-details", function () {
            var row = $(this).closest("tr");
            var leaveId = row.data("id");

            $("#modalRequester").text(row.data("requester"));
            $("#modalDates").text(row.data("dates"));
            $("#modalStatus").text(row.data("status"));
            $("#modalReason").text(row.data("reason"));

            $("#approveBtn").attr("href", "/Leave/Approve/" + leaveId);
            $("#rejectBtn").attr("href", "/Leave/Reject/" + leaveId);

            $("#detailsModal").modal("show");
        });
    </script>

    <style>
        /* Hide buttons by default */
        .leave-table .action-buttons button {
            display: none;
        }

        /* Show only when row is hovered */
        .leave-table tr:hover .action-buttons button {
            display: inline-block;
        }
    </style>
}
