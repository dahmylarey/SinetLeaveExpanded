@model SinetLeaveManagement.Models.EmployeeProfile

@{
    ViewData["Title"] = "Delete Employee Profile";
}

<div class="container mt-4">
    <div class="card shadow-sm p-4">
        <h3 class="text-danger mb-3">Delete Confirmation</h3>

        <p>Are you sure you want to delete this profile?</p>

        <dl class="row">
            <dt class="col-sm-3">Employee</dt>
            <dd class="col-sm-9">@Model.User?.FirstName @Model.User?.LastName</dd>

            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">@Model.User?.Email</dd>

            <dt class="col-sm-3">Employment Status</dt>
            <dd class="col-sm-9">@Model.EmploymentStatus</dd>
        </dl>

        <form asp-action="DeleteConfirmed" method="post">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash"></i> Delete
            </button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>
