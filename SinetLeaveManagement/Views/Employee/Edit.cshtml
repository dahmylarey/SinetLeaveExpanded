@model SinetLeaveManagement.Models.EmployeeProfile

@{
    ViewData["Title"] = "Edit Employee Profile";
}

<div class="container mt-4">
    <h2 class="mb-3 text-primary">Edit Employee Profile</h2>

    <form asp-action="Edit" method="post" class="card p-4 shadow-sm">
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label class="form-label fw-bold">Employee</label>
            <input type="text" class="form-control" value="@Model.User?.FirstName @Model.User?.LastName (@Model.User?.Email)" readonly />
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                <label asp-for="Address" class="form-label"></label>
                <input asp-for="Address" class="form-control" />
            </div>
            <div class="col-md-3 mb-3">
                <label asp-for="City" class="form-label"></label>
                <input asp-for="City" class="form-control" />
            </div>
            <div class="col-md-3 mb-3">
                <label asp-for="Country" class="form-label"></label>
                <input asp-for="Country" class="form-control" />
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                <label asp-for="ContractStartDate" class="form-label"></label>
                <input asp-for="ContractStartDate" type="date" class="form-control" />
            </div>
            <div class="col-md-6 mb-3">
                <label asp-for="ContractEndDate" class="form-label"></label>
                <input asp-for="ContractEndDate" type="date" class="form-control" />
            </div>
        </div>

        <div class="mb-3">
            <label asp-for="EmploymentStatus" class="form-label"></label>
            <select asp-for="EmploymentStatus" class="form-select">
                <option>Active</option>
                <option>Probation</option>
                <option>Terminated</option>
            </select>
        </div>

        <button type="submit" class="btn btn-warning">
            <i class="bi bi-pencil"></i> Update
        </button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
